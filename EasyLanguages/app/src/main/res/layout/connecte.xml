<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.Connecte">

    <TextView
        android:id="@+id/titre"
        android:layout_height="47dp"
        android:layout_width="match_parent"
        android:text="Espace membre"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:fontFamily="casual"
        android:textColor="#2858FF"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:background="?attr/colorButtonNormal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        >


        <Button
            android:id="@+id/cours"
            android:text="Cours du jour"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            />

        <Button
            android:id="@+id/coursValides"
            android:text="Cours validÃ©s"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            />

        <Button
            android:id="@+id/contacterMentor"
            android:text="Rendez-vous"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/mesAlertes"
            android:text="Mes alertes"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            />
    </GridLayout>
</LinearLayout>